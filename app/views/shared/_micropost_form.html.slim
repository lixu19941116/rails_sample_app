= form_for current_user.microposts.new, html: { multipart: true } do |f|
  / form_for中指定了html: { multipart: true }参数。为了支持文件上传功能,必须指定这个参数。
  = render 'shared/error_messages', object: f.object

  .form-group
    = f.text_area :content, placeholder: "有什么新鲜事想告诉大家？", class: 'form-control micropost_content', rows: 5, maxlength: 140

  = f.submit "发布", class: "btn btn-success disabled create-micropost"
  p.characterPrompt.pull-right 还可以输入140个字

  sapn.picture
    = f.file_field :picture, accept: 'image/jpeg,image/gif,image/png', class: 'micropost_picture'

javascript:
  function uploadPrompt(size_in_megabytes) {
    if (size_in_megabytes > 5) {
      swal({
        title: "Maximum file size is 5MB. Please choose a smaller file.",
        type: "warning"
      });
    }
  }

  $('.micropost-form .micropost_picture').bind('change', function() {
    uploadPrompt(this.files[0].size/1024/1024);
  });

  $('.modal-body .micropost_picture').bind('change', function() {
    uploadPrompt(this.files[0].size/1024/1024);
  });

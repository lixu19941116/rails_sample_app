$('#comment-<%= @comment.id %>').slideUp(function() {
  $(this).remove();
});

if(<%= @comment.micropost.comments.count %>) {
  $("#micropost-<%= @comment.micropost.id %> .comments-count").html('<%= @comment.micropost.comments.count %>')
}
else {
  $("#micropost-<%= @comment.micropost.id %> .comments-count").html('评论')
}
